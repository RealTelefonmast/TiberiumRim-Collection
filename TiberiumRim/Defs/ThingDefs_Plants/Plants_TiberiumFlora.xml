<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="TiberiumFloraBase">
		<defName>TiberiumPlant</defName>
		<label>Tiberium plant</label>
		<description>A strange-looking lifeform. Looks infested with Tiberium.</description>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<Beauty>-26</Beauty>
		</statBases>
		<graphicData>
			<texPath>Plant/Tiberium/Flora/Grass</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>12</pathCost>
		<plant>
			<dieIfLeafless>false</dieIfLeafless>
			<growDays>4</growDays>
			<lifespanFraction>269</lifespanFraction>
			<visualSizeRange>
				<min>2.0</min>
				<max>3.0</max>
			</visualSizeRange>
			<reproduces>false</reproduces>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growMinGlow>0</growMinGlow>
			<maxMeshCount>1</maxMeshCount>
			<topWindExposure>0.2</topWindExposure>
		</plant>
	</ThingDef> 
	
	<ThingDef ParentName="TiberiumFloraBase">
		<defName>TiberiumGrass</defName>
		<label>tiberium grass</label>
		<description>A strange type of grass-like flora.</description>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Plant/Tiberium/Flora/Grass</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible>
			<nutrition>0.18</nutrition>
		</ingestible>
		<plant>
			<soundHarvesting>Harvest_Tree</soundHarvesting>
			<soundHarvestFinish>Harvest_Tree_Finish</soundHarvestFinish>
			<harvestWork>800</harvestWork>
			<harvestedThingDef>TiberiumPlantGrass</harvestedThingDef>
			<harvestYield>6</harvestYield>
			<growDays>2.5</growDays>
			<harvestWork>40</harvestWork>
			<visualSizeRange>
				<min>1</min>
				<max>2</max>
			</visualSizeRange>
			<topWindExposure>0.4</topWindExposure>
			<reproduceMtbDays>3</reproduceMtbDays>
			<wildBiomes>
				<TiberiumRedZone>1</TiberiumRedZone>
			</wildBiomes>
			<maxMeshCount>4</maxMeshCount>
		</plant>
	</ThingDef>
	
  <ThingDef ParentName="TiberiumFloraBase">
    <defName>TiberiumBush</defName>
    <label>tiberium bush</label>
    <description>A bunch of different Tiberium flora forming a bush.</description>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
    </statBases>
    <graphicData>
      <texPath>Plant/Tiberium/Flora/Bush</texPath>
      <graphicClass>Graphic_Random</graphicClass>
       <shadowData>
         <volume>(0.55, 0.2, 0.2)</volume>
       </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <fillPercent>0.20</fillPercent>
    <pathCost>30</pathCost>
    <ingestible>
      <nutrition>0.30</nutrition>
    </ingestible>
    <plant>
		<soundHarvesting>Harvest_Tree</soundHarvesting>
		<soundHarvestFinish>Harvest_Tree_Finish</soundHarvestFinish>
		<harvestWork>800</harvestWork>
		<harvestedThingDef>TiberiumPlantBerry</harvestedThingDef>
		<harvestYield>6</harvestYield>
		<growDays>3</growDays>
		<wildClusterSizeRange>
			<min>2</min>
			<max>5</max>
		</wildClusterSizeRange>
		<wildClusterRadius>4</wildClusterRadius>
		<visualSizeRange>
			<min>1</min>
			<max>2</max>
		</visualSizeRange>
		<topWindExposure>0.3</topWindExposure>
		<wildBiomes>
			<TiberiumRedZone>0.3</TiberiumRedZone>
		</wildBiomes>
		<maxMeshCount>4</maxMeshCount>
    </plant>
  </ThingDef>
  
    <ThingDef ParentName="TiberiumFloraBase">
